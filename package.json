{
  "name": "@tecknition/honkit-plugin-tags",
  "version": "1.0.0",
  "description": "Honkit/GitBook plugin to add tags via front matter or HTML comments, inject badges, and auto-generate tag index and per-tag pages.",
  "main": "index.js",
  "keywords": [
    "honkit",
    "gitbook",
    "plugin",
    "tags",
    "frontmatter",
    "tagging"
  ],
  "author": "OpenAI ChatGPT",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "test": "node --test",
    "test:watch": "node --test --watch",
    "coverage": "c8 --reporter=html --reporter=text --reporter=lcov node --test",
    "complexity": "eslint --ignore-pattern 'coverage/**' .",
    "complexity:report": "npx cr --format json --output complexity-report.json .",
    "duplication": "npx jscpd .",
    "quality": "npm run format:check && npm run lint && npm run complexity && npm run duplication && npm run coverage",
    "precommit": "npm run format && npm run lint:fix && npm test"
  },
  "peerDependencies": {
    "honkit": ">=4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tecknition/honkit-plugin-tags.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "c8": "^9.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-complexity": "^1.0.2",
    "prettier": "^3.6.2"
  },
  "files": [
    "index.js",
    "assets",
    "README.md",
    "LICENSE"
  ]
}
